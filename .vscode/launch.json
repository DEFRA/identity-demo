  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Web (Elm)",
      "cwd": "${workspaceFolder}/web",
      "program": "${workspaceFolder}/web/index.js",
      "envFile": "${workspaceFolder}/web/.elm.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Web (Grants)",
      "cwd": "${workspaceFolder}/web",
      "program": "${workspaceFolder}/web/index.js",
      "envFile": "${workspaceFolder}/web/.grants.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Api",
      "cwd": "${workspaceFolder}/api",
      "program": "${workspaceFolder}/api/index.js",
      "envFile": "${workspaceFolder}/api/.env"
    }
  ]
}